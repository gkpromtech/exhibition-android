<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_image_grid_id"
    android:background="@android:color/black"
    tools:context="ru.gkpromtech.exhibition.media.ImagesGridActivity">

    <GridView
        android:id="@+id/gridView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="@dimen/image_thumbnail_size"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:padding="4dp"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/image_gallery_spacing"
        android:horizontalSpacing="@dimen/image_gallery_spacing"
        android:gravity="center"/>

</LinearLayout>
