<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/item_spacing"
    tools:ignore="RtlHardcoded"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/item_spacing"
        android:layout_weight="0"
        android:contentDescription="@string/empty"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_spacing"
        android:layout_marginRight="@dimen/item_spacing"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/textPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <ru.gkpromtech.exhibition.utils.CircleImageView
        android:id="@+id/imageShowOnSchema"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="@dimen/item_spacing_small"
        android:layout_marginTop="@dimen/item_spacing_small"
        android:layout_weight="0"
        android:clickable="true"
        android:onClick="onShowOnSchemaClicked"
        android:scaleType="centerInside"
        android:src="@drawable/ic_location" />
</LinearLayout>
