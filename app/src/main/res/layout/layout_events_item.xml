<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="18dp"
    android:descendantFocusability="blocksDescendants"
    android:clickable="false">

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textColor="@color/Exhibition.White"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:background="@color/Exhibition.DarkGray"
        android:paddingLeft="@dimen/item_spacing"
        android:paddingRight="@dimen/item_spacing"
        android:text="10:00"/>

    <TextView
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/header_bottom_left_gray"
        android:paddingLeft="@dimen/item_spacing"
        android:paddingRight="@dimen/item_spacing" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Header Header Header Header Header Header Header ppp "
            android:id="@+id/textViewEventHeader"
            style="?android:attr/textAppearanceMedium"
            android:paddingBottom="@dimen/item_spacing_small"
            android:textColor="@color/Exhibition.Black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place"
            android:id="@+id/textViewEventPlace"
            style="?android:attr/textAppearanceSmall"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageFlag"
        android:layout_width="24dp"
        android:layout_height="32dp"
        android:background="@drawable/favorite_selector"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:clickable="true" />

</LinearLayout>