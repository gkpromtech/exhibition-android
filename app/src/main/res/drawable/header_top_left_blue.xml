<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <rotate
            android:fromDegrees="65"
            android:pivotX="12%"
            android:pivotY="10%">
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="@color/Exhibition.Black"
                    android:centerColor="@color/Exhibition.Black"
                    android:endColor="@android:color/transparent"
                    android:angle="90"/>
            </shape>
        </rotate>
    </item>

    <item>
        <rotate
            android:fromDegrees="65"
            android:pivotX="0%"
            android:pivotY="0%">
            <shape android:shape="rectangle">
                <solid android:color="@color/Exhibition.Secondary" />
            </shape>
        </rotate>
    </item>

</layer-list>